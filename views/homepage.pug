            .col-lg-4.col-12.mb-3
              .product-thumb
                a(href="/product-detail")
                  img.img-fluid.product-image(src="images/product/jordan-nix-CkCUvwMXAac-unsplash.jpeg" alt="")
                .product-top.d-flex
                  span.product-alert Low Price
                  a.bi-heart-fill.product-icon.ms-auto(href="#")
                .product-info.d-flex
                  div
                    h5.product-title.mb-0
                      a.product-title-link(href="/product-detail") Fashion Set
                    p.product-p Costume Package
                  small.product-price.text-muted.ms-auto.mt-auto.mb-5 $35

            .col-lg-4.col-12
              .product-thumb
                a(href="/product-detail")
                  img.img-fluid.product-image(src="images/product/nature-zen-3Dn1BZZv3m8-unsplash.jpeg" alt="")
                .product-top.d-flex
                  a.bi-heart-fill.product-icon.ms-auto(href="#")
                .product-info.d-flex
                  div
                    h5.product-title.mb-0
                      a.product-title-link(href="/product-detail") Juice Drinks
                    p.product-p Nature made another world
                  small.product-price.text-muted.ms-auto.mt-auto.mb-5 $45

            .col-12.text-center
              a.view-all(href="/products") View All Products

