        .container
          .row
            .col-12.text-center
              h2.mb-5 Featured Products

            .col-lg-4.col-12.mb-3
              .product-thumb
                a(href="/product-detail")
                  img.img-fluid.product-image(src="images/product/evan-mcdougall-qnh1odlqOmk-unsplash.jpeg" alt="")
                .product-top.d-flex
                  span.product-alert.me-auto New Arrival
                  a.bi-heart-fill.product-icon(href="#")
                .product-info.d-flex
                  div
