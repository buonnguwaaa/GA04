  body
    .section.preloader
      .spinner
        span.sk-inner-circle

    main(role="main")
      nav.navbar.navbar-expand-lg
        .container
          button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon

          a.navbar-brand(href="/homepage")
            strong
              span Family
              |  Guy

          .d-lg-none
            if user && user.username
              a.custom-icon.me-3(href="/profile") 
                span.ms-1.fs-6= user.username
                i.bi-person
            else
              a.bi-person.custom-icon.me-3(href="/login")
            a.bi-bag.custom-icon(href="/product-detail")

          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.mx-auto
              li.nav-item
                a.nav-link(href="/homepage") Home
              li.nav-item
                a.nav-link(href="/about") About
              li.nav-item
                a.nav-link.active(href="/products") Products
              li.nav-item
                a.nav-link(href="/faq") FAQs
              li.nav-item
                a.nav-link(href="/contact") Contact

            .d-none.d-lg-block
              if user && user.username
                a.custom-icon.me-3(href="/profile") 
                  span.ms-1.fs-5= user.username
                  i.bi-person
              else
                a.bi-person.custom-icon.me-3(href="/login")
              a.bi-bag.custom-icon(href="/product-detail")

      .site-header.section-padding.d-flex.justify-content-center.align-items-center
        .container
          .row
            .col-lg-10.col-12
              h1
                span.d-block.text-primary We provide you
                span.d-block.text-dark Fashionable Stuffs

      .section.product-detail.section-padding
        .container
          .row
            
            .col-lg-6.col-12
              .product-thumb
                img.img-fluid.product-image(src="/" + product.img)
            
            .col-lg-6.col-12
              .product-info.d-flex
                div
                  h2.product-title.mb-0 #{product.title}
                  p #{product.catego}
                  span.small $#{product.price}
              
              .product-description
                strong Description
                p #{product.description}
              
              .product-cart-thumb.row
                .col-lg-6.col-12
                  select
                    option Quantity
                    each val in [1, 2, 3, 4, 5]
                      option= val
                
                .col-lg-6.col-12.mt-4.mt-lg-0
                  button.btn Add to Cart
                
                .product-links
                  a.product-additional-link(href="#") Details
                  a.product-additional-link(href="#") Delivery and Payment

