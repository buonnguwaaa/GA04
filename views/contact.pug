doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(name="description" content="")
    meta(name="author" content="")
    
    title Tooplate's Little Fashion - Sign Up Page
    
    // CSS FILES
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet")
    link(href="css/bootstrap.min.css" rel="stylesheet")
    link(href="css/bootstrap-icons.css" rel="stylesheet")
    link(rel="stylesheet" href="css/slick.css")
    link(href="css/tooplate-little-fashion.css" rel="stylesheet")
    
    //- Tooplate 2127 Little Fashion
    //- https://www.tooplate.com/view/2127-little-fashion
      
  body
    .section.preloader
      .spinner
        span.sk-inner-circle

    main(role="main")
      nav.navbar.navbar-expand-lg
        .container
          button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon

          a.navbar-brand(href="/homepage")
            strong
              span Family
              |  Guy

          .d-lg-none
            a.bi-person.custom-icon.me-3(href="/login")
            a.bi-bag.custom-icon(href="/product-detail")

          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.mx-auto
              li.nav-item
                a.nav-link(href="/homepage") Home
              li.nav-item
                a.nav-link(href="/about") About
              li.nav-item
                a.nav-link(href="/products") Products
              li.nav-item
                a.nav-link(href="/faq") FAQs
              li.nav-item
                a.nav-link.active(href="/contact") Contact

            .d-none.d-lg-block
              a.bi-person.custom-icon.me-3(href="/login")
              a.bi-bag.custom-icon(href="/product-detail")

      .site-header.section-padding-img.site-header-image
        .container
          .row
            .col-lg-10.col-12.header-info
              h1 
                span.d-block.text-primary Say hello to us
                span.d-block.text-dark love to hear you
          
          img.header-image.img-fluid(src="images/header/positive-european-woman-has-break-after-work.jpg")

      .section.contact.section-padding
        .container
          .row
            .col-lg-6.col-12
              h2.mb-4 Let's begin
              
              .form-floating
                | Full name
              
              .form-floating.my-4
                | Email address
              
              .form-floating.my-4
                | Subject
              
              .form-floating.mb-4
                | Tell us about the project
              
              .col-lg-5.col-6
                | Send
            
            .col-lg-6.col-12.mt-5.ms-auto
              .row
                .col-6.border-end.contact-info
                  h6.mb-3 New Business
                  a.custom-link(href="mailto:hello@company.com") hello@company.com
                
                .col-6.contact-info
                  h6.mb-3 Main Studio
                  a.custom-link(href="mailto:studio@company.com") studio@company.com
                
                .col-6.border-top.border-end.contact-info
                  h6.mb-3 Our Office
                
                .col-6.border-top.contact-info
                  h6.mb-3 Our Socials
                  ul
                    li: a(href="#").social-icon-link.bi-messenger
                    li: a(href="#").social-icon-link.bi-youtube
                    li: a(href="#").social-icon-link.bi-instagram
                    li: a(href="#").social-icon-link.bi-whatsapp

    footer.site-footer
      .container
        .row
          .col-lg-3.col-10.me-auto.mb-4
            h4.text-white.mb-3
              a(href="/homepage") Family
              |  Guy
            p.copyright-text.text-muted.mt-lg-5.mb-4.mb-lg-0
              | Copyright Â© 2024 
              strong Family Guy
            br
            p.copyright-text
              | Designed by 
              a(href=".//about" target="_blank")
                span Family Guy

          .col-lg-5.col-8
            h5.text-white.mb-3 Sitemap
            ul.footer-menu.d-flex.flex-wrap
              li.footer-menu-item
                a.footer-menu-link(href="/about") About
              li.footer-menu-item
                a.footer-menu-link(href="#") Products
              li.footer-menu-item
                a.footer-menu-link(href="#") Privacy policy
              li.footer-menu-item
                a.footer-menu-link(href="#") FAQs
              li.footer-menu-item
                a.footer-menu-link(href="#") Contact

          .col-lg-3.col-4
            h5.text-white.mb-3 Social
            ul.social-icon
              li
                a.social-icon-link.bi-youtube(href="#")
              li
                a.social-icon-link.bi-whatsapp(href="#")
              li
                a.social-icon-link.bi-instagram(href="#")
              li
                a.social-icon-link.bi-skype(href="#")
    // JAVASCRIPT FILES
    script(src="js/jquery.min.js")
    script(src="js/bootstrap.bundle.min.js")
    script(src="js/Headroom.js")
    script(src="js/jQuery.headroom.js")
    script(src="js/slick.min.js")
    script(src="js/custom.js")