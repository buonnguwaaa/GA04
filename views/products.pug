  body
    .section.preloader
      .spinner
        span.sk-inner-circle

    main(role="main")
      nav.navbar.navbar-expand-lg
        .container
          button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon

          a.navbar-brand(href="/homepage")
            strong
              span Family
              |  Guy

          .d-lg-none
            a.bi-person.custom-icon.me-3(href="/login")
            a.bi-bag.custom-icon(href="/product-detail")

          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.mx-auto
              li.nav-item
                a.nav-link(href="/homepage") Home
              li.nav-item
                a.nav-link(href="/about") About
              li.nav-item
                a.nav-link.active(href="/products") Products
              li.nav-item
                a.nav-link(href="/faq") FAQs
              li.nav-item
                a.nav-link(href="/contact") Contact

            .d-none.d-lg-block
              a.bi-person.custom-icon.me-3(href="/login")
              a.bi-bag.custom-icon(href="/product-detail")

      .site-header.section-padding.d-flex.justify-content-center.align-items-center
        .container
          .row
            .col-lg-10.col-12
              h1 
                span.d-block.text-primary Choose your
                span.d-block.text-dark favorite stuffs

